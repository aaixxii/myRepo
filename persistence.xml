<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="AIMDB">
		<jta-data-source>java:jboss/MySqlDS</jta-data-source>
		<mapping-file>aim-orm.xml</mapping-file>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.order_updates" value="true" />
			<property name="hibernate.use_sql_comments" value="true" />
			<property name="hibernate.connection.aggressive_release"
				value="true" />
			<property name="hibernate.ejb.naming_strategy" value="jp.co.nec.aim.mm.constants.MySQLUpperCaseStrategy"/> 	
			<property name="hibernate.id.new_generator_mappings" value="false"/>
			<!-- JNDI Lookup setting for VersionCheckHandler -->
			<property name="jboss.entity.manager.jndi.name" value="java:/EntityManager/AIMDB" />
		</properties>
	</persistence-unit>
</persistence>